@model IndexModel
@if (Model != null && Model.ImagesList != null)
{
    int counter = 0;

    <div class="row">
        <div class="col-lg-8">
            @if (Model.ImagesList.Count() > 0)
            {
                <div id="carouselControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="10000">
                    <div class="carousel-inner">

                        @{
                            counter = 0;
                            foreach (var image in Model.ImagesList)
                            {
                                <div class="carousel-item @(counter == 0 ? "active":"")">
                                    <img src="@image.Src" alt="@image.Src">
                                </div>
                                counter++;
                            }
                        }

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <span>No Images found</span>
            }
        </div>
        <div class="col-lg-4">
            <partial name="~/Pages/_Words.cshtml" model="@Model" />
        </div>
    </div>
}
@if (Model.IsEmpty)
{
    <span>No Results found</span>
}